{
	"comment": "Sample component configuration",
	"components": {
		"Welcome Component": {
			"window": {
				"url": "$applicationRoot/components/welcome/welcome.html",
				"frame": false,
				"resizable": true,
				"autoShow": true,
				"top": "center",
				"left": "center",
				"width": 400,
				"height": 432
			},
			"component": {
				"inject": false,
				"spawnOnStartup": false,
				"preload": "$applicationRoot/preloads/zoom.js"
			},
			"foreign": {
				"services": {
					"dockingService": {
						"canGroup": true,
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": true
					},
					"Window Manager": {
						"showLinker": true,
						"FSBLHeader": true,
						"persistWindowState": true,
						"title": "Welcome"
					},
					"Toolbar": {
						"iconClass": "ff-component"
					}
				}
			}
		},
		"Notepad": {
			"window": {
				"id": "Notepad",
				"native": true,
				"path": "notepad.exe",
				"url": "",
				"defaultHeight": 600,
				"autoShow": true,
				"alwaysOnTop": false,
				"resizable": true,
				"showTaskbarIcon": false,
				"contextMenu": true,
				"addToWorkspace": true
			},
			"component": {
				"spawnOnHotkey": [
					"ctrl",
					"alt",
					"n"
				]
			},
			"foreign": {
				"services": {
					"workspaceService": {
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": true
					},
					"Window Manager": {
						"persistWindowState": false,
						"FSBLHeader": true
					},
					"Toolbar": {
						"iconURL": "$applicationRoot/assets/img/notepad.png"
					}
				}
			}
		},
		"Getting Started Tutorial": {
			"window": {
				"url": "https://www.chartiq.com/tutorials/?slug=finsemble-seed-project",
				"height": 800,
				"width": 1000
			},
			"component": {
				"spawnOnStartup": false
			},
			"foreign": {
				"services": {
					"dockingService": {
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"persistWindowState": true,
						"FSBLHeader": true,
						"showLinker": false
					}
				}
			}
		},
		"Finsemble Documentation": {
			"window": {
				"url": "http://documentation.chartiq.com/finsemble",
				"left": "center",
				"top": "center",
				"height": 800,
				"width": 1000
			},
			"component": {},
			"foreign": {
				"services": {
					"dockingService": {
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"persistWindowState": false,
						"FSBLHeader": true,
						"showLinker": false
					}
				}
			}
		},
		"defaultAuthentication": {
			"window": {
				"url": "$applicationRoot/components/authentication/defaultAuthentication.html",
				"top": "center",
				"left": "center",
				"width": 358,
				"height": 458,
				"ephemeral": true,
				"options": {
					"autoShow": false
				}
			},
			"component": {
				"neededClients": [
					"LauncherClient",
					"AuthenticationClient",
					"StorageClient"
				],
				"category": "system"
			},
			"foreign": {
				"services": {
					"dockingService": {
						"isArrangable": false
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"FSBLHeader": false,
						"persistWindowState": false
					}
				}
			}
		},
		"notification": {
            "window": {
                "url": "$applicationRoot/components/notification/notification.html",
                "frame": false,
                "resizable": false,
                "autoShow": true,
                "bottom": "0",
                "right": "0",
                "width": 350,
                "height": 100,
                "title": "Finsemble Notification",
                "options": {
                    "alwaysOnTop": true,
                    "autoShow": false,
                    "cornerRounding": {
                        "height": 8,
                        "width": 8
                    },
                    "opacity": 0.85,
                    "showTaskbarIcon": false
                }
            },
            "component": {
                "inject": false,
                "category": "system"
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "isArrangable": false
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": false
                    },
                    "Window Manager": {
                        "FSBLHeader": false,
                        "persistWindowState": false
                    }
                }
            }
        },
        "testNotifications": {
            "window": {
                "url": "$applicationRoot/components/testNotifications/testNotifications.html",
                "frame": false,
                "resizable": true,
                "autoShow": true,
                "top": "center",
                "left": "center",
                "width": 800,
                "height": 600,
                "title": "testNotifications"
            },
            "component": {
                "inject": false
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "canGroup": true,
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "FSBLHeader": true,
                        "persistWindowState": true
                    },
                    "Toolbar": {
                        "iconClass": "testNotifications"
                    }
                }
            }
        },
        "NotificationsCenter": {
            "window": {
                "url": "$applicationRoot/components/notificationsCenter/notificationsCenter.html",
                "frame": false,
                "top": "center",
                "left": "center",
                "width": 800,
                "height": 600,
				"title": "Notification Center",
                "options": {
                    "autoShow": false,
					"resizable": false,
                    "alwaysOnTop": true
                }
            },
            "component": {
                "category": "system",
                "spawnOnStartup": true
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "canGroup": false,
                        "isArrangable": false
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": false
                    },
                    "Window Manager": {
                        "FSBLHeader": false,
                        "persistWindowState": false
                    },
                    "Toolbar": {
                        "iconClass": "NotificationsCenter"
                    }
                }
            }
        }
	}
}
