{
	"comment": "Sample component configuration",
	"components": {
		"Welcome Component": {
			"window": {
				"url": "$applicationRoot/components/welcome/welcome.html",
				"affinity": "workspaceComponents",
				"frame": false,
				"resizable": true,
				"autoShow": true,
				"top": "center",
				"left": "center",
				"width": 400,
				"height": 432
			},
			"component": {
				"inject": false,
				"spawnOnStartup": false,
				"preload": "$applicationRoot/preloads/zoom.js"
			},
			"foreign": {
				"services": {
					"dockingService": {
						"canGroup": true,
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": true
					},
					"Window Manager": {
						"showLinker": true,
						"FSBLHeader": true,
						"persistWindowState": true,
						"title": "Welcome"
					},
					"Toolbar": {
						"iconClass": "ff-component"
					}
				}
			}
		},
		"nonConfiguredComponent": {
			"window": {
				"url": "$applicationRoot/components/nonConfiguredComponent/nonConfiguredComponent.html",
				"affinity": "systemComponents",
				"frame": false,
				"resizable": true,
				"autoShow": true,
				"top": "center",
				"left": "center",
				"width": 400,
				"height": 432
			}
		},
		"Notepad": {
			"window": {
				"id": "Notepad",
				"native": true,
				"path": "notepad.exe",
				"url": "",
				"defaultHeight": 600,
				"autoShow": true,
				"alwaysOnTop": false,
				"resizable": true,
				"showTaskbarIcon": false,
				"contextMenu": true,
				"addToWorkspace": true
			},
			"component": {
				"spawnOnHotkey": [
					"ctrl",
					"alt",
					"n"
				]
			},
			"foreign": {
				"services": {
					"workspaceService": {
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": true
					},
					"Window Manager": {
						"persistWindowState": false,
						"FSBLHeader": true
					},
					"Toolbar": {
						"iconURL": "$applicationRoot/assets/img/notepad.png"
					}
				}
			}
		},
		"Getting Started Tutorial": {
			"window": {
				"url": "https://www.chartiq.com/tutorials/?slug=finsemble-seed-project",
				"height": 800,
				"width": 1000
			},
			"component": {
				"spawnOnStartup": false
			},
			"foreign": {
				"services": {
					"dockingService": {
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"persistWindowState": true,
						"FSBLHeader": true,
						"showLinker": false
					}
				}
			}
		},
		"Finsemble Documentation": {
			"window": {
				"url": "http://documentation.chartiq.com/finsemble",
				"left": "center",
				"top": "center",
				"height": 800,
				"width": 1000
			},
			"component": {},
			"foreign": {
				"services": {
					"dockingService": {
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"persistWindowState": false,
						"FSBLHeader": true,
						"showLinker": false
					}
				}
			}
		},
		"defaultAuthentication": {
			"window": {
				"url": "$applicationRoot/components/authentication/defaultAuthentication.html",
				"top": "center",
				"left": "center",
				"width": 358,
				"height": 458,
				"ephemeral": true,
				"options": {
					"autoShow": false
				}
			},
			"component": {
				"neededClients": [
					"LauncherClient",
					"AuthenticationClient",
					"StorageClient"
				],
				"category": "system"
			},
			"foreign": {
				"services": {
					"dockingService": {
						"isArrangable": false
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"FSBLHeader": false,
						"persistWindowState": false
					}
				}
			}
		},
		"accountDetail": {
			"window": {
				//url: This is the most important entry. The contents of the URL address listed here are brought in as a component.
				"url": "$applicationRoot/components/accountDetail/accountDetail.html",
				//resizable: When `true`, the window can be resized by the user.
				"resizable": true,
				"frame": false,
				//autoShow: Defines the window as visible and not invisible.
				"autoShow": true,
				//top: A pixel value representing the distance from the top edge of the viewport. When set to 'center,' this centers the window.
				"top": "center",
				//left: A pixel value representing the distance from the left edge of the viewport. When set to 'center,' this centers the window.
				"left": "center",
				//width: Sets the default width of the component.
				"width": 400,
				//height: "Sets the default height of the component.
				"height": 432
				}
			},
			"component": {
				//spawnOnStartup: Controls whether the component automatically spawns during Finsemble's startup.
				"spawnOnStartup": false,
				//preload: Defines what scripts are loaded into the window prior to the `url` contents.
				"preload": false
			},
			//foreign: This subsection provides a place for the component to offer up parameters to other services and components.
			"foreign": {
				"services": {
					"dockingService": {
						//canGroup: When `true`, allows the window to form groups with other windows.
						"canGroup": true
					}
				},
				"components": {
					"App Launcher": {
						//launchableByUser: When `true`, this component is added to the My Apps menu.
						"launchableByUser": true
					},
					"Window Manager": {
						//persistWindowState: When `true`, Finsemble will restore this window to the same position when the workspace is reloaded.
						"persistWindowState": true,
						//FSBLHeader: FSBLHeader can be true, false or an object. 
						//If true a Finsemble-specific window title bar will be injected into the component and the maximize, minimize, and close buttons will be displayed. 
						//If false, the title bar will not be displayed. 
						//If an object, you can override whether buttons are shown with "hideMaximize", "hideMinimize", and "hideClose."
						"FSBLHeader": true,
						"showLinker": true
					}
				}
			}
		},
		"accountStatement": {
			"window": {
				"url": "$applicationRoot/components/accountStatement/accountStatement.html",
				"resizable": true,
				"frame": false,
				"autoShow": true,
				"top": "center",
				"left": "center",
				"width": 400,
				"height": 432
			},
			"component": {
				"inject": false,
				"spawnOnStartup": false,
				"preload": false
			},
			"foreign": {
				"services": {
					"dockingService": {
						"canGroup": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": true
					},
					"Window Manager": {
						"persistWindowState": true,
						"FSBLHeader": true,
						"showLinker": true
					}
				}
			}
		},
		"accountList": {
			"window": {
				"url": "$applicationRoot/components/accountList/accountList.html",
				"frame": false,
				"resizable": true,
				"autoShow": true,
				"top": "center",
				"left": "center",
				"width": 400,
				"height": 432,
				"options": {
					"securityPolicy": "trusted"
				}
			},
			"component": {
				"inject": false,
				"spawnOnStartup": false,
				"preload": false
			},
			"foreign": {
				"services": {
					"dockingService": {
						"canGroup": true,
						"isArrangable": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": true
					},
					"Window Manager": {
						"showLinker": true,
						"FSBLHeader": true,
						"persistWindowState": true,
						"title": "Welcome"
					},
					"Toolbar": {
						"iconClass": "ff-component"
					}
				}
			}
		}
	}
}
