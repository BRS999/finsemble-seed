{
    "comment": "Sample component configuration",
    "components": {
        "Welcome Component": {
            "window": {
                "url": "$applicationRoot/components/welcome/welcome.html",
                "affinity": "workspaceComponents",
                "frame": false,
                "resizable": true,
                "autoShow": true,
                "top": "center",
                "left": "center",
                "width": 400,
                "height": 432
            },
            "component": {
                "inject": false,
                "spawnOnStartup": false,
                "preload": "$applicationRoot/preloads/zoom.js"
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "canGroup": true,
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "showLinker": true,
                        "FSBLHeader": true,
                        "persistWindowState": true,
                        "title": "Welcome"
                    },
                    "Toolbar": {
                        "iconClass": "ff-component"
                    }
                }
            }
        },
        "nonConfiguredComponent": {
            "window": {
                "url": "$applicationRoot/components/nonConfiguredComponent/nonConfiguredComponent.html",
                "affinity": "systemComponents",
                "frame": false,
                "resizable": true,
                "autoShow": true,
                "top": "center",
                "left": "center",
                "width": 400,
                "height": 432
            }
        },
        "Notepad": {
            "window": {
                "id": "Notepad",
                "native": true,
                "path": "notepad.exe",
                "url": "",
                "defaultHeight": 600,
                "autoShow": true,
                "resizable": true,
                "showTaskbarIcon": false,
                "contextMenu": true,
                "addToWorkspace": true,
                "options": {
                    "alwaysOnTop": false
                }
            },
            "component": {
                "spawnOnHotkey": [
                    "ctrl",
                    "alt",
                    "n"
                ]
            },
            "foreign": {
                "services": {
                    "workspaceService": {
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "persistWindowState": false,
                        "FSBLHeader": true
                    },
                    "Toolbar": {
                        "iconURL": "$applicationRoot/assets/img/notepad.png"
                    }
                }
            }
        },
        "Getting Started Tutorial": {
            "window": {
                "url": "https://www.chartiq.com/tutorials/?slug=finsemble-seed-project",
                "height": 800,
                "width": 1000
            },
            "component": {
                "spawnOnStartup": false
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": false
                    },
                    "Window Manager": {
                        "persistWindowState": true,
                        "FSBLHeader": true,
                        "showLinker": false
                    }
                }
            }
        },
        "Finsemble Documentation": {
            "window": {
                "url": "http://documentation.chartiq.com/finsemble",
                "left": "center",
                "top": "center",
                "height": 800,
                "width": 1000
            },
            "component": {},
            "foreign": {
                "services": {
                    "dockingService": {
                        "isArrangable": true
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": false
                    },
                    "Window Manager": {
                        "persistWindowState": false,
                        "FSBLHeader": true,
                        "showLinker": false
                    }
                }
            }
        },
        "defaultAuthentication": {
            "window": {
                "url": "$applicationRoot/components/authentication/defaultAuthentication.html",
                "top": "center",
                "left": "center",
                "width": 358,
                "height": 658,
                "ephemeral": true,
                "options": {
                    "autoShow": false
                }
            },
            "component": {
                "neededClients": [
                    "LauncherClient",
                    "AuthenticationClient",
                    "StorageClient"
                ],
                "category": "system"
            },
            "foreign": {
                "services": {
                    "dockingService": {
                        "isArrangable": false
                    }
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": false
                    },
                    "Window Manager": {
                        "FSBLHeader": false,
                        "persistWindowState": false
                    }
                }
            }
        },
        "chromeDownload": {
            "window": {
                "url": "$applicationRoot/components/chromeDownload/chromeDownload.html",
                "options": {
                    "resizable": true,
                    "autoShow": true,
                    "alwaysOnTop": false,
                    "downloadConfig": {
                        "//autoDownload": "true | false | ['.ext1', 'ext2', 'etc.']",
                        "autoDownload": [
                            ".xls"
                        ],
                        "//downloadDir": "If not provided, download to default 'Download' directory",
                        "//autoOpen": "true | false | ['.ext1', 'ext2', 'etc.']",
                        "autoOpen": false
                    }
                },
                "top": "center",
                "left": "center",
                "width": 800,
                "height": 600
            },
            "component": {
                "preload": false,
                "spawnOnStartup": false,
                "singleton": false,
                "showDevConsoleOnVisible": false
            },
            "foreign": {
                "services": {
                    "windowService": {
                        "manageWindowMovement": true,
                        "allowAutoArrange": true,
                        "allowSnapping": true,
                        "allowTabbing": true,
                        "allowTiling": true,
                        "allowGrouping": true,
                        "allowMinimize": true
                    },
                    "workspace": {}
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "alwaysOnTopIcon": true,
                        "title": "chromeDownload",
                        "persistWindowState": true
                    },
                    "Toolbar": {
                        "iconClass": "chromeDownload",
                        "iconURL": "http://localhost:3375/assets/img/Finsemble_Taskbar_Icon.png"
                    }
                }
            }
        },
        "firefoxDownloadManager": {
            "window": {
                "url": "$applicationRoot/components/firefoxDownloadManager/firefoxDownloadManager.html",
                "options": {
                    "resizable": true,
                    "autoShow": true,
                    "alwaysOnTop": false
                },
                "top": "center",
                "left": "center",
                "width": 800,
                "height": 600
            },
            "component": {
                "preload": false,
                "spawnOnStartup": false,
                "singleton": false,
                "showDevConsoleOnVisible": false
            },
            "foreign": {
                "services": {
                    "windowService": {
                        "manageWindowMovement": true,
                        "allowAutoArrange": true,
                        "allowSnapping": true,
                        "allowTabbing": true,
                        "allowTiling": true,
                        "allowGrouping": true,
                        "allowMinimize": true
                    },
                    "workspace": {}
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "alwaysOnTopIcon": true,
                        "title": "firefoxDownloadManager",
                        "persistWindowState": true
                    },
                    "Toolbar": {
                        "iconClass": "firefoxDownloadManager",
                        "iconURL": "http://localhost:3375/assets/img/Finsemble_Taskbar_Icon.png"
                    }
                }
            }
        }
    }
}
